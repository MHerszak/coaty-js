{
    "extends": "../tslint.json",
    "rules": {
        "quotemark": false,
        "no-trailing-whitespace": [
            true,
            "ignore-template-strings",
            "ignore-comments",
            "ignore-jsdoc"
        ],
        "no-unused-expression": [
            true,
            "allow-fast-null-checks",
            "allow-new",
            "allow-tagged-template"
        ],
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}